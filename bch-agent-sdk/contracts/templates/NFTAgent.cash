pragma cashscript ^0.12.0;

/**
 * NFT Agent - Managed CashTokens Identity
 */
contract NFTAgent(pubkey ownerPk, bytes20 agentId) {
    function mint(sig ownerSig, bytes commitment) {
        require(checkSig(ownerSig, ownerPk));
        require(agentId != bytes20(0));
        // Requirement: Output 1 must be an NFT with the new commitment
        require(tx.outputs[0].nftCommitment == commitment);
    }

    function transferNFT(sig ownerSig) {
        require(checkSig(ownerSig, ownerPk));
        require(agentId != bytes20(0));
    }
}
