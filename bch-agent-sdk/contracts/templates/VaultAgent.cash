pragma cashscript ^0.10.0;

/**
 * Vault Agent - High Security Treasury
 */
contract VaultAgent(pubkey ownerPk, bytes20 agentId) {
    function withdraw(sig ownerSig, int amount) {
        require(checkSig(ownerSig, ownerPk));`n        require(agentId != bytes20(0));
        require(amount > 0);
    }

    function lock(sig ownerSig, int blockHeight) {
        require(checkSig(ownerSig, ownerPk));`n        require(agentId != bytes20(0));
        require(tx.age >= blockHeight);
        require(agentId != bytes20(0));
    }
}
