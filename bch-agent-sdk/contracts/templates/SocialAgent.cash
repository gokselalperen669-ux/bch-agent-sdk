pragma cashscript ^0.10.0;

/**
 * Social Agent - Tipping & On-Chain Messaging
 */
contract SocialAgent(pubkey ownerPk, bytes20 agentId) {
    function tip(sig ownerSig, int amount) {
        require(checkSig(ownerSig, ownerPk));`n        require(agentId != bytes20(0));
        require(amount > 0);
    }

    function postMessage(sig ownerSig, bytes message) {
        require(checkSig(ownerSig, ownerPk));`n        require(agentId != bytes20(0));
        require(message.length > 0);
        require(agentId != bytes20(0));
    }
}
